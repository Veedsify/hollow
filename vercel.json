{
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/:path((?!.*\\.).*)", 
      "destination": "/:path.html"
    },
    {
      "source": "/404",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/:path(.+)\\.html",
      "destination": "/:path",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=2592000" } 
      ]
    },
    {
      "source": "/.htaccess",
      "headers": [
        { "key": "X-Robots-Tag", "value": "noindex, nofollow" },
        { "key": "Access-Control-Allow-Origin", "value": "DENY" }
      ]
    }
  ]
}
