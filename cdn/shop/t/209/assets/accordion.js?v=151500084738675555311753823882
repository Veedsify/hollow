if(!customElements.get("component-accordions")){class Accordions extends HTMLElement{constructor(){super()}connectedCallback(){this.accordions(".accordion__item",".accordion__content",".accordion__control","open")}accordions(accordionsSelector,contentSelector,controlSelector,activeClass){const accordions=this.querySelectorAll(accordionsSelector);function openAccordion(item,content,controller){item.classList.add(activeClass),content.style.maxHeight=content.scrollHeight+"px",controller.setAttribute("aria-expanded",!0),content.setAttribute("aria-hidden",!1)}function hideAccordion(item,content,controller){item.classList.remove(activeClass),content.style.maxHeight="",controller.setAttribute("aria-expanded",!1),content.setAttribute("aria-hidden",!0)}accordions.forEach(el=>{const content=el.querySelector(contentSelector),controller=el.querySelector(controlSelector);el.classList.contains(activeClass)&&openAccordion(el,content,controller),el.addEventListener("click",({currentTarget,target})=>{const currentContent=currentTarget.querySelector(contentSelector),currentController=currentTarget.querySelector(controlSelector);target.closest(controlSelector)&&(el.classList.contains(activeClass)?hideAccordion(currentTarget,currentContent,currentController):(accordions.forEach(item=>{const content2=item.querySelector(contentSelector),controller2=item.querySelector(controlSelector);hideAccordion(item,content2,controller2)}),openAccordion(currentTarget,currentContent,currentController)))})})}}customElements.define("component-accordions",Accordions)}
